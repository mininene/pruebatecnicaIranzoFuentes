@model IEnumerable<BancoDePreguntas.Models.Pregunta>

@{
    ViewBag.Title = "Index";
}

<h2>Crear Preguntas</h2>
<p>
    @Html.ActionLink("Crear Pregunta", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Asignatura.NombreAsignatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estudio.NombreEstudio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradoDificultad.Nivel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idioma.Lenguaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Respuesta.Respuestas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tema.NombreTema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TiempoRealizacion.Tiempo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoPregunta.TipoDePregunta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreguntaTextual)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asignatura.NombreAsignatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estudio.NombreEstudio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradoDificultad.Nivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idioma.Lenguaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta.Respuestas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema.NombreTema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiempoRealizacion.Tiempo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPregunta.TipoDePregunta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreguntaTextual)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>




        </tr>
    }

</table>
