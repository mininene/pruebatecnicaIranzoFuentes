@model IEnumerable<BancoDePreguntas.Models.Pregunta>
@using GridMvc.Html
@{
    ViewBag.Title = "Crear Pregunta";
}

<h2>Crear</h2>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<p>
    @Html.ActionLink("Crear", "Create", new { }, new { @class = "btn btn-success" })
</p>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Estudio.NombreEstudio).Titled("Estudio");
    columns.Add(c => c.Asignatura.NombreAsignatura).Titled("Asignatura");
    columns.Add(c => c.Tema.NombreTema).Titled("Tema");
    columns.Add(c => c.TipoPregunta.TipoDePregunta).Titled("TipodePregunta");
    columns.Add(c => c.Idioma.Lenguaje).Titled("Idioma");
    columns.Add(c => c.GradoDificultad.Nivel).Titled("Dificultad");
    columns.Add(c => c.TiempoRealizacion.Tiempo).Titled("Duracion");
    columns.Add(c => c.Respuesta.Respuestas).Titled("Respuestas");
    columns.Add(c => c.PreguntaTextual).Titled("Pregunta");
    //columns.Add(c => c.FechaCreacion).Titled("Fecha Creación").Filterable(true);
    //columns.Add(c => c.FechaActualizacion).Titled("Fecha Edición").Filterable(true);

    columns.Add().Titled("Opciones").Encoded(false)
                        .Sanitized(false)
                        .RenderValueAs(o => (
                       Html.ActionLink("Borrar", "Delete", "CrearPregunta", new { id = o.Id }, new { @class = "btn btn-danger btn-sm" }).ToHtmlString()
                            )
                        );

}).WithPaging(5).







