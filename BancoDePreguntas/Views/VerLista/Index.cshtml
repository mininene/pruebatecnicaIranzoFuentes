@model IEnumerable<BancoDePreguntas.Models.Pregunta>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2 >Listado de Preguntas</h2>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />






<div class="">
    
</div>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Estudio.NombreEstudio).Titled("Estudio").Filterable(true);
    columns.Add(c => c.Asignatura.NombreAsignatura).Titled("Asignatura").Filterable(true);
    columns.Add(c => c.Tema.NombreTema).Titled("Tema").Filterable(true);
    columns.Add(c => c.TipoPregunta.TipoDePregunta).Titled("TipodePregunta").Filterable(true);
    columns.Add(c => c.Idioma.Lenguaje).Titled("Idioma").Filterable(true);
    columns.Add(c => c.GradoDificultad.Nivel).Titled("Dificultad").Filterable(true);
    columns.Add(c => c.TiempoRealizacion.Tiempo).Titled("Duracion").Filterable(true);
    columns.Add(c => c.PreguntaTextual).Titled("Pregunta").Filterable(true);

    //columns.Add(c => c.FechaCreacion).Titled("Fecha Creación").Filterable(true);
    //columns.Add(c => c.FechaActualizacion).Titled("Fecha Edición").Filterable(true);

    //columns.Add(c => c.Respuesta.Respuestas).Titled("Respuestas").Filterable(true);
    columns.Add().Titled("Info").Encoded(false)
                    .Sanitized(false)
                    .RenderValueAs(o => (
    
                 Html.ActionLink(" Info", "Details", "VerLista", new { id = o.Id }, new { @class = "btn btn-info btn-sm glyphicon glyphicon-info-sign " }).ToHtmlString()
                 


                         )
                            );

}).WithPaging(5).Sortable(true)

